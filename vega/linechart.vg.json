{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "some title",
    "data": {"url": "data/world_country_gdp.csv"},
    "width": 400,
    "height": 300,

    "params": [ {
        "name": "Country_selection",
        "bind": {
            "input": "select",
            "options": [
              null,
              "Australia",
              "United States",
              "United Kingdom",
              "China",
              "India",
              "Japan"
            ],
            "labels":[
              "Show All",
              "Australia",
              "United States",
              "United Kingdom",
              "China",
              "India",
              "Japan"
      ],
            "name": "Country Selection: "
          }
      } ],
      "transform": [
        {"filter": "datum.year > 0"},
        {"filter": "datum.GDP_per_capita > 0"},
        {
          "filter": "Country_selection == null || datum.Country Name == Country_selection"
        } ],      

    "encoding": {"x": {"field": "year", "type": "temporal"}},
    "layer": [
      {
        "encoding": {
          "color": {"field": "Country Name", "type": "nominal"},
          "y": {"field": "GDP_per_capita", "type": "quantitative"}
        },
        "layer": [
          {"mark": "line"},
          {"transform": [{"filter": {"param": "hover", "empty": false}}], "mark": "point"}
        ]
      },
      {
        "transform": [{"pivot": "Country Name", "value": "GDP_per_capita", "groupby": ["year"]}],
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {"field": "year", "type": "temporal"},
            {"field": "Australia", "type": "quantitative"},
            {"field": "France", "type": "quantitative"},
            {"field": "United Kingdom", "type": "quantitative"},
            {"field": "China", "type": "quantitative"},
            {"field": "United States", "type": "quantitative"}
          ]
        },
        "params": [{
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["year"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }]
      }
    ]
  }
  